<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Usuario"
        android:id="@+id/nombre"
        android:layout_marginTop="33dp"
        android:layout_alignParentTop="true" android:layout_alignStart="@+id/idBar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="ContraseÃ±a"
        android:id="@+id/idBar"
        android:layout_below="@+id/textNombre" android:layout_centerHorizontal="true" android:layout_marginTop="32dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textNombre"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/nombre"
        android:layout_alignEnd="@+id/textBar"
        android:layout_alignStart="@+id/textBar" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/textBar"
        android:layout_centerVertical="true" android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmar"
        android:id="@+id/OK"
        android:layout_below="@+id/textBar" android:layout_centerHorizontal="true"/>
</RelativeLayout>