<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Nombre"
        android:id="@+id/nombre"
        android:layout_marginTop="75dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/idBar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="IDBar"
        android:id="@+id/idBar"
        android:layout_marginStart="19dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textNombre"
        android:layout_alignTop="@+id/nombre"
        android:layout_alignStart="@+id/OK"
        android:layout_alignEnd="@+id/textDescripcion" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/textBar"
        android:layout_below="@+id/idBar"
        android:layout_alignStart="@+id/textIdentificador"
        android:layout_alignEnd="@+id/textIdentificador" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textIdentificador"
        android:inputType="number"
        android:layout_below="@+id/textNombre"
        android:layout_alignStart="@+id/textNombre"
        android:layout_marginTop="58dp"
        android:layout_alignEnd="@+id/textNombre" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmar"
        android:id="@+id/OK"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Identificador"
        android:id="@+id/id"
        android:layout_below="@+id/textNombre"
        android:layout_alignStart="@+id/nombre"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripcion"
        android:id="@+id/descripcion"
        android:layout_alignTop="@+id/textDescripcion"
        android:layout_alignStart="@+id/idBar" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/textDescripcion"
        android:layout_below="@+id/textBar"
        android:layout_alignStart="@+id/OK"
        android:layout_marginTop="42dp" />

</RelativeLayout>