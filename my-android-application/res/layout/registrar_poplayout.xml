<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Usuario"
        android:id="@+id/nombre"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/idBar"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="ContraseÃ±a"
        android:id="@+id/idBar"
        android:layout_marginBottom="27dp"
        android:layout_above="@+id/textPassword"
        android:layout_toStartOf="@+id/textPassword" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textNombre"
        android:layout_below="@+id/nombre"
        android:layout_alignStart="@+id/textPassword"
        android:layout_alignEnd="@+id/textEmail" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/textPassword"
        android:layout_above="@+id/OK"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="78dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmar"
        android:id="@+id/OK"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textEmail"
        android:inputType="textEmailAddress"
        android:layout_above="@+id/idBar"
        android:layout_marginBottom="54dp"
        android:layout_alignEnd="@+id/textPassword"
        android:layout_toEndOf="@+id/idBar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Email"
        android:id="@+id/id"
        android:layout_above="@+id/textEmail"
        android:layout_alignStart="@+id/nombre"
        android:layout_marginBottom="35dp" />


</RelativeLayout>